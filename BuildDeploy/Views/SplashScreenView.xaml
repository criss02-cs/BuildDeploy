<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BuildDeploy.Views.SplashScreenView"
             xmlns:progressBar="clr-namespace:Syncfusion.Maui.ProgressBar;assembly=Syncfusion.Maui.ProgressBar"
             xmlns:viewModels="using:BuildDeploy.ViewModels"
             Title="SplashScreen"
             Appearing="SplashScreenView_OnAppearing"
             x:DataType="viewModels:SplashScreenViewModel">
    <Grid RowDefinitions="*,30,20" >
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Label Text="Build and deploy your applications!"/>
        </StackLayout>
        <Label Grid.Row="1" Text="{Binding Status}" Margin="10,0,0,0" />
        <progressBar:SfLinearProgressBar IsIndeterminate="True" Grid.Row="2" ProgressHeight="20" TrackHeight="20" />
    </Grid>
</ContentPage>