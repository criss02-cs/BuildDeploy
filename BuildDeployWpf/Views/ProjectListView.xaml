<Page
    x:Class="BuildDeployWpf.Views.ProjectListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:converters="clr-namespace:BuildDeployWpf.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:BuildDeployWpf.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:BuildDeploy.Business.Models;assembly=BuildDeploy.Business"
    xmlns:viewModels="clr-namespace:BuildDeployWpf.ViewModels"
    xmlns:winUi="clr-namespace:BuildDeploy.WinUI;assembly=BuildDeploy.WinUI"
    Title="ProjectListView"
    Syncfusion:SfSkinManager.Theme="{Syncfusion:SkinManagerExtension ThemeName=Windows11Dark}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#1f2022"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:HasItemsToVisibilityConverter x:Key="HasItemsToVisibilityConverter" />
        <converters:EmptyToVisibilityConverter x:Key="EmptyToVisibilityConverter"/>
    </Page.Resources>

    <Page.DataContext>
        <viewModels:ProjectListViewModel />
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Grid.ColumnSpan="2">
            <Grid
                Margin="20,0"
                VerticalAlignment="Center"
                FlowDirection="LeftToRight">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <winUi:Button
                    Height="32"
                    Padding="10,0"
                    HorizontalAlignment="Left"
                    Command="{Binding AddNewProjectCommand}"
                    Style="{StaticResource DarkButton}"
                    Text="Aggiungi un progetto" />
            </Grid>
        </Border>
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="10"
            BorderThickness="1"
            CornerRadius="10">
            <ListView
                x:Name="ListView"
                Margin="0,0,20,0"
                HorizontalContentAlignment="Stretch"
                Background="Transparent"
                BorderThickness="0"
                ItemsSource="{Binding Projects}"
                SelectedItem="{Binding SelectedProject}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding OpenProjectCommand}" CommandParameter="{Binding SelectedItem, ElementName=ListView}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Grid>
                                        <Border
                                            Name="LeftBd"
                                            Width="3"
                                            Height="20"
                                            HorizontalAlignment="Left"
                                            Panel.ZIndex="5"
                                            CornerRadius="2" />
                                        <Border
                                            Name="Bd"
                                            Padding="10,5"
                                            CornerRadius="5"
                                            SnapsToDevicePixels="true">
                                            <ContentPresenter
                                                Grid.Column="1"
                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#2d2d2d" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="LeftBd" Property="Background" Value="#4cc2ff" />
                                            <Setter TargetName="Bd" Property="Background" Value="#2d2d2d" />
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsSelected" Value="True" />
                                                <Condition Property="IsMouseOver" Value="True" />
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Bd" Property="Background" Value="#292929" />
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Cursor="Hand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6*" />
                                <ColumnDefinition Width="4*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Foreground="White"
                                Text="{Binding Name}" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Foreground="White"
                                Text="{Binding LastTimeOpened, StringFormat=dd/MM/yyyy HH:mm:ss}" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Foreground="White"
                                Text="{Binding Path}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            Background="#2a2b2d"
            BorderThickness="1"
            CornerRadius="10">
            <StackPanel>
                <Syncfusion:SfTreeView
                    x:Name="TreeView"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    ChildPropertyName="SubFolders"
                    IsAnimationEnabled="True"
                    ItemsSource="{Binding Folders}">
                    <Syncfusion:SfTreeView.Style>
                        <Style TargetType="Syncfusion:SfTreeView">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ShowDataGrid}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ShowDataGrid}" Value="False">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Syncfusion:SfTreeView.Style>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding OpenFolderCommand}" CommandParameter="{Binding SelectedItem, ElementName=TreeView}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Syncfusion:SfTreeView.ItemTemplate>
                        <DataTemplate DataType="{x:Type models:Folder}">
                            <TextBlock
                                Name="TextBlock"
                                Cursor="Hand"
                                Foreground="White"
                                Text="{Binding Name}" />
                        </DataTemplate>
                    </Syncfusion:SfTreeView.ItemTemplate>
                </Syncfusion:SfTreeView>
                <Syncfusion:SfDataGrid ItemsSource="{Binding ProjectFiles}"
                                       x:Name="DataGrid">
                    <Syncfusion:SfDataGrid.Style>
                        <Style TargetType="Syncfusion:SfDataGrid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ShowDataGrid}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ShowDataGrid}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Syncfusion:SfDataGrid.Style>
                    <Syncfusion:SfDataGrid.Columns>
                        <Syncfusion:GridCheckBoxColumn HeaderText="Seleziona" MappingName="IsSelected" />
                        <Syncfusion:GridTextColumn HeaderText="Nome" MappingName="Name" />
                        <Syncfusion:GridTextColumn HeaderText="Dimensioni" MappingName="Size" />
                        <Syncfusion:GridDateTimeColumn HeaderText="Ultima modifica" MappingName="LastModified" />
                        <Syncfusion:GridTextColumn HeaderText="Tipo" MappingName="Tipo" />
                    </Syncfusion:SfDataGrid.Columns>
                </Syncfusion:SfDataGrid>
            </StackPanel>
        </Border>
    </Grid>
</Page>
