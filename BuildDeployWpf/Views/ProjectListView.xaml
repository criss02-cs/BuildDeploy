<Page
    x:Class="BuildDeployWpf.Views.ProjectListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:customControls="clr-namespace:BuildDeployWpf.CustomControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:BuildDeployWpf.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:BuildDeployWpf.ViewModels"
    Title="ProjectListView"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#1f2022"
    mc:Ignorable="d">
    <Page.Resources>
        <Style x:Key="WhiteTextColor" TargetType="Grid">
            <Style.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Foreground" Value="White" />
                </Style>
            </Style.Resources>
        </Style>
    </Page.Resources>
    <Page.DataContext>
        <viewModels:ProjectListViewModel />
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Grid.ColumnSpan="2">
            <Grid
                Margin="20,0"
                VerticalAlignment="Center"
                FlowDirection="LeftToRight">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <customControls:CustomButton
                    Height="32"
                    Padding="10,0"
                    HorizontalAlignment="Left"
                    Command="{Binding AddNewProjectCommand}"
                    Content="Aggiungi un progetto" />
                <customControls:CustomButton
                    Grid.Column="1"
                    Height="32"
                    Padding="10,0"
                    HorizontalAlignment="Left"
                    Command="{Binding AddNewProjectCommand}"
                    Content="Aggiungi un progetto"
                    Style="{StaticResource PrimaryButton}" />
            </Grid>
        </Border>
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="10"
            BorderThickness="1"
            CornerRadius="10">
            <ListView
                x:Name="ListView"
                Margin="0,0,20,0"
                HorizontalContentAlignment="Stretch"
                Background="Transparent"
                BorderThickness="0"
                ItemsSource="{Binding Projects}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding OpenProjectCommand}" CommandParameter="{Binding SelectedItem, ElementName=ListView}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <Grid>
                                        <Border
                                            Width="3"
                                            Height="20"
                                            Name="LeftBd"
                                            HorizontalAlignment="Left"
                                            CornerRadius="2" Panel.ZIndex="5" />
                                        <Border
                                            Name="Bd"
                                            Padding="10,5"
                                            CornerRadius="5"
                                            SnapsToDevicePixels="true">
                                            <ContentPresenter
                                                Grid.Column="1"
                                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="#2d2d2d" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="LeftBd" Property="Background" Value="#4cc2ff" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Cursor="Hand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6*" />
                                <ColumnDefinition Width="4*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Foreground="White"
                                Text="{Binding Name}" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalAlignment="Right"
                                Foreground="White"
                                Text="{Binding LastTimeOpened, StringFormat=dd/MM/yyyy HH:mm:ss}" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Foreground="White"
                                Text="{Binding Path}" />
                        </Grid>
                        <!--<DataTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#9e73ce" />
                                <Setter TargetName="Border" Property="Visibility" Value="Visible" />
                            </Trigger>
                        </DataTemplate.Triggers>-->
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            Background="#2a2b2d"
            BorderThickness="1"
            CornerRadius="10" />
    </Grid>

